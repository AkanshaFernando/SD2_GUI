<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo1.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="login"/>
    <HBox>
        <Label fx:id="username" text="Username: "/>
        <TextField fx:id="usernameInputArea"/>
    </HBox>

    <HBox>
    <Label fx:id="password" text="Password: "/>
    <PasswordField fx:id="passwordInputArea"/>
    </HBox>

    <Label fx:id="submitConfirmation" wrapText="true"/>

    <HBox>
    <Button text="Clear" onAction="#onClearButtonClick"/>
    <Button text="Submit" onAction="#onSubmitButtonClick"/>
    </HBox>

</VBox>
